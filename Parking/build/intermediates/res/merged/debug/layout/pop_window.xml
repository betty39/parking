<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/popLayout"
              android:weightSum="1">

    <ImageView
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="right" android:src="@drawable/order"
            android:layout_weight="0.25"/>

    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/popName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="10sp" />
            <TextView
                    android:id="@+id/leftNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="9sp" android:layout_column="19"/>
        </TableRow>

    </TableLayout>


    <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="10sp" />


</LinearLayout><!-- From: file:/E:/Zongheshijianke/Github/parking/Parking/res/layout/pop_window.xml -->